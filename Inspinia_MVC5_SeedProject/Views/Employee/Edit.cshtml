@model FARSIMAN.Models.tbEmployee
@using FARSIMAN.Controllers

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";

    EmployeeController employeeController = new EmployeeController();


    //List<FARSIMAN.Models.tbSubsidiary> tbSubsidiaries = employeeController.GetEmployeesSubsidiary();

    List<FARSIMAN.Models.tbPosition> tbPositions = employeeController.GetPositions();

}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Editar Empleado</h2>
    </div>
    <div class="col-sm-8">
        <div class="title-action">
            @Html.ActionLink("Volver al listado", "Index", null, new { @class = "btn btn-primary" })
        </div>
    </div>
</div>


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Editar Empleado</h5>
                </div>
                <div class="ibox-content">

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal ">
                            @Html.Partial("_ModalSolicitarKM")
                        </div>
                        <div class="form-horizontal ms-4">

                            @Html.ValidationSummary(true)
                            @Html.HiddenFor(model => model.employee_ID)

                            <div class="mb-3">
                                @Html.LabelFor(model => model.employee_Name, new { @class = "form-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.employee_Name)
                                    @Html.ValidationMessageFor(model => model.employee_Name)
                                </div>
                            </div>

                            <div class="mb-3">
                                @Html.LabelFor(model => model.employee_Direction, new { @class = "form-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.employee_Direction, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.employee_Direction)
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label col-md-2">Puesto o Cargo</label>
                                <div class="col-md-4">
                                    @Html.DropDownList("position_ID", (SelectList)ViewBag.Positions, new { @class = "form-control text-box single-line", @required = string.Empty })
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="ibox float-e-margins">

                                        <div class="ibox-content" id="Crear">

                                            <div id="EmployessAddedValidation" class="validation-error">
                                                <p style="color:red">
                                                    <span class="field-validation-valid" data-valmsg-for="EmployessAvalaible" data-valmsg-replace="true"></span>
                                                </p>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <label class="col-md-10" style="text-align:center">Sucursales Disponibles</label>
                                                    <table id="NoAdded" class="table table table-striped table-bordered dataTable no-footer" style="width:100%">
                                                        <thead>
                                                            <tr>
                                                                <th hidden style="background-color:#1ab394;color:white">
                                                                    ID
                                                                </th>
                                                                <th id="NoAssign" style="background-color:#1ab394;color:white">
                                                                    Nombre
                                                                </th>
                                                                <th style="background-color: #1ab394; color: white">
                                                                    @*@Html.DisplayNameFor(model => model.tbEmployeesSubsidiaries)*@
                                                                    Direccion
                                                                </th>
                                                                <th style="background-color:#1ab394;color:white"></th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            @foreach (var item in (List<FARSIMAN.Models.tbSubsidiary>)ViewBag.tbSubsidiary)
                                                            {
                                                                <tr data-id="@item.subsidiary_ID">
                                                                    <td hidden>
                                                                        @Html.DisplayFor(modelItem => item.subsidiary_ID)
                                                                    </td>
                                                                    <td>
                                                                        @Html.DisplayFor(modelItem => item.subsidiary_Name)
                                                                    </td>
                                                                    <td>
                                                                        @Html.DisplayFor(modelItem => item.subsidiary_Direction)
                                                                    </td>
                                                                    <td>
                                                                        <input name="id02" type="button" id="AddSubsidiary" class="btn btn-primary btn-sm" value="Agregar &#9658" />
                                                                    </td>

                                                                </tr>
                                                            }
                                                        </tbody>
                                                    </table>

                                                </div>
                                                <div class="col-md-6">
                                                    <label class="col-md-10" style="text-align:center">Sucursales Asignadas</label>
                                                    <table id="Added" class="table table table-striped table-bordered dataTable no-footer" style="width:100%">
                                                        <thead>
                                                            <tr>
                                                                <th hidden style="background-color:#1ab394;color:white">ID</th>
                                                                <th id="Assign" style="background-color:#1ab394;color:white">Nombre</th>
                                                                <th style="background-color: #1ab394; color: white">Direccion</th>
                                                                <th style="background-color:#1ab394;color:white">Distancia(KM)</th>
                                                                <th style="background-color:#1ab394;color:white"></th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            @foreach (var item in (List<FARSIMAN.Models.tbEmployeesSubsidiary>)ViewBag.tbEmployeesSubsidiaries)
                                                            {
                                                                <tr data-id="@item.employeeSubsidiary_ID">
                                                                    <td hidden>
                                                                        @Html.DisplayFor(modelItem => item.subsidiary_ID)
                                                                    </td>
                                                                    <td>
                                                                        @Html.DisplayFor(modelItem => item.tbSubsidiary.subsidiary_Name)
                                                                    </td>
                                                                    <td>
                                                                        @Html.DisplayFor(modelItem => item.tbSubsidiary.subsidiary_Direction)
                                                                    </td>
                                                                    <td>
                                                                        @Html.DisplayFor(modelItem => item.employeeSubsidiary_DistanceKM)
                                                                    </td>
                                                                    <td>
                                                                        <input name="id02" type="button" id="DelSubsidiary" class="btn btn-primary btn-sm" value="&#9668; Quitar &nbsp;&nbsp;" />
                                                                    </td>
                                                                </tr>
                                                            }
                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="container">
                                <div class="row">
                                    <div class="col-md-6 offset-md-3">
                                        <div class="form-horizontal">
                                            <fieldset class="box-border">
                                                @* botones *@
                                                <div class="text-center">
                                                    <input type="submit" value="Guardar" class="btn btn-primary" />
                                                    @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-white" })
                                                </div>
                                            </fieldset>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    }


                </div>
            </div>
        </div>
    </div>
</div>



@section scripts{
    <script src="~/Scripts/app/Employees/CreateEmployee.js"></script>

}